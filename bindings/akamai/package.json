{
    "name": "@google-cloud/recaptcha-akamai",
    "version": "1.0.0",
    "description": "",
    "main": "dist/edge_worker.js",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "esbuild --bundle src/index.ts --platform=node --external:create-response --external:http-request --external:html-rewriter --outdir=dist && cd dist && tar -czvf ../akamai.tgz *",
        "test": "jest"
    },
    "jest": {
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "mjs",
            "js",
            "jsx",
            "ts",
            "tsx",
            "json",
            "node"
        ],
        "testMatch": [
            "**/?(*.)spec.?js",
            "**/?(*.)spec.js"
        ],
        "transform": {
            "^.+\\.m?js$": "babel-jest"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!edgeworkers-jest-mocks/__mocks__)"
        ],
        "moduleDirectories": [
            "node_modules",
            "node_modules/edgeworkers-jest-mocks/__mocks__"
        ]
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.22.15",
        "@babel/preset-typescript": "^7.22.15",
        "@rollup-extras/plugin-copy": "^1.9.3",
        "@rollup/plugin-json": "^6.1.0",
        "babel-plugin-add-import-extension": "^1.6.0",
        "edgeworkers-jest-mocks": "^1.0.27",
        "esbuild": "^0.24.0",
        "esbuild-plugin-tsc": "^0.4.0",
        "jest": "^29.7.0",
        "nativescript-dev-typescript": "^0.7.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@google-cloud/recaptcha": "^1.0.0",
        "@types/akamai-edgeworkers": "^1.1.17",
        "edgeworkers-jest-mocks": "^1.0.27",
        "jest": "^29.7.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "workspaces": [
        "../../"
    ]
}
