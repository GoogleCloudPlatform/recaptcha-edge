{
    "name": "@google-cloud/recaptcha-akamai",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "type": "module",
    "author": "",
    "license": "ISC",
    "main": "dist/edge_worker.js",
    "scripts": {
        "build": "esbuild --bundle src/edge_worker.ts --platform=node --format=esm --external:create-response --external:http-request --external:html-rewriter --external:streams --external:log --outdir=dist && mv dist/edge_worker.js dist/main.js && cp src/bundle.json dist/ && cd dist && tar -czvf akamai.tgz bundle.json main.js",
        "devclean": "rm -rf node_nodules && rm -rf dist && rm package-lock.json",
        "test": "jest"
    },
    "jest": {
        "testEnvironment": "node",
        "transformIgnorePatterns": [
            "node_modules/(?!edgeworkers-jest-mocks/__mocks__)"
        ],
        "moduleDirectories": [
            "node_modules",
            "node_modules/edgeworkers-jest-mocks/__mocks__"
        ]
    },
    "dependencies": {
        "@google-cloud/recaptcha": "^1.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.9.0",
        "@types/request": "^2.48.12",
        "@types/akamai-edgeworkers": "^1.1.17",
        "@types/node-fetch": "^2.6.11",
        "edgeworkers-jest-mocks": "^1.0.28",
        "esbuild": "^0.24.0",
        "esbuild-plugin-tsc": "^0.4.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.5.3",
        "whatwg-fetch": "^3.6.20"
    },
    "workspaces": [
        "../../"
    ]
}
