{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "types": ["@cloudflare/workers-types/experimental", "@cloudflare/vitest-pool-workers", "node"],
    "paths": {
      "@google-cloud/recaptcha": ["../recaptcha-lib/dist"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test", "examples", "vite.config.ts", "**/**.test.ts"]
}
