{
  "compilerOptions": {
    "target": "esnext", 
    "module": "node16",
    "moduleResolution": "node16", // Or "nodenext" 
    "lib": ["esnext"], 
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@google-cloud/recaptcha": ["../recaptcha-lib/dist"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
  ]
}